From 471017c7a217c8b3b200ef4322be986727be7526 Mon Sep 17 00:00:00 2001
From: Eli Collins <eli@cloudera.com>
Date: Sun, 11 Mar 2012 15:14:52 -0700
Subject: [PATCH 0002/1357] CLOUDERA-BUILD. Add the ability to deploy binary and src tarballs.

---
 hadoop-dist/pom.xml |   32 +++++++++++++++++++++++++++++++-
 1 files changed, 31 insertions(+), 1 deletions(-)

diff --git a/hadoop-dist/pom.xml b/hadoop-dist/pom.xml
index 75bd429..31e7860 100644
--- a/hadoop-dist/pom.xml
+++ b/hadoop-dist/pom.xml
@@ -27,6 +27,10 @@
   <name>Apache Hadoop Distribution</name>
   <packaging>jar</packaging>
 
+  <properties>
+    <maven.deploy.skip>false</maven.deploy.skip>
+  </properties>
+
   <!-- Using dependencies to ensure this module is the last one -->
   <dependencies>
     <dependency>
@@ -56,7 +60,7 @@
       <plugin>
         <artifactId>maven-deploy-plugin</artifactId>
         <configuration>
-          <skip>true</skip>
+          <skip>${maven.deploy.skip}</skip>
         </configuration>
       </plugin>
       <plugin>
@@ -163,6 +167,32 @@
               </execution>
             </executions>
           </plugin>
+          <plugin>
+            <groupId>org.codehaus.mojo</groupId>
+            <artifactId>build-helper-maven-plugin</artifactId>
+            <executions>
+              <execution>
+                <id>add-jar</id>
+                <phase>package</phase>
+                <goals>
+                  <goal>attach-artifact</goal>
+                </goals>
+                <configuration>
+                  <artifacts>
+                    <artifact>
+                      <file>${project.build.directory}/hadoop-${project.version}.tar.gz</file>
+                      <type>tar.gz</type>
+                    </artifact>
+                    <artifact>
+                      <file>${project.build.directory}/hadoop-${project.version}-src.tar.gz</file>
+                      <type>tar.gz</type>
+                      <classifier>source</classifier>
+                    </artifact>
+                  </artifacts>
+                </configuration>
+              </execution>
+            </executions>
+          </plugin>
         </plugins>
       </build>
     </profile>
